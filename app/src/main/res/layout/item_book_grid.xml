<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    style="@style/Widget.App.Card"
    android:foreground="@drawable/ripple_card"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Book Cover with 2:3 aspect ratio (typical book dimensions) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/aspectRatioGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.67" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bookCoverCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/aspectRatioGuideline"
            app:layout_constraintDimensionRatio="H,2:3">

            <ImageView
                android:id="@+id/bookCoverImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/book_title"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_book"
                android:background="?attr/colorSurfaceVariant" />

            <!-- Progress overlay -->
            <View
                android:id="@+id/progressOverlay"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@color/overlay_light" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/bookProgressBar"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:max="100"
                app:trackThickness="4dp"
                app:trackCornerRadius="0dp"
                tools:progress="45" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Book info section -->
        <LinearLayout
            android:id="@+id/bookInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/bookCoverCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menuButton"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/bookTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                tools:text="The Great Gatsby" />

            <TextView
                android:id="@+id/bookAuthorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="F. Scott Fitzgerald" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_circular"
            android:contentDescription="@string/book_info"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bookInfoLayout"
            app:layout_constraintBottom_toBottomOf="@id/bookInfoLayout"
            android:layout_marginEnd="8dp" />

        <!-- Hidden progress text view for list layout compatibility -->
        <TextView
            android:id="@+id/bookProgressTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            tools:text="45% complete" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
